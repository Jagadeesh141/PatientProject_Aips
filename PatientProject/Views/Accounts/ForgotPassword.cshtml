@model ForgotPasswordViewModel
@{
    ViewBag.Title = "ForgotPassword";
   
}

<div class="wrapper">
    <div class="form-container">


        <h2 class="text-center">Forgot Password</h2>
        <div class="form-inner">


<form asp-action="ForgotPassword" method="post">
    

    @* Email *@
    <div class="form-field flex">
        <div class="w-25">
                        <label asp-for="Email" class="form-label pt">Email<span class="required"></span></label>
        </div>
        <div class="flex-1">
            <input asp-for="Email" class="form-input-login" />
            <span asp-validation-for="Email" class="text-red"></span>
        </div>
    </div>

    @* New Password *@
    <div class="form-field flex">
        <div class="w-25">
                        <label asp-for="NewPassword" class="form-label pt">New Password<span class="required"></span></label>
        </div>
        <div class="flex-1">
            <input asp-for="NewPassword" class="form-input-login" />
            <span asp-validation-for="NewPassword" class="text-red"></span>
        </div>
    </div>

                @*confirm password*@
                <div class="form-field flex">
                    <div class="w-25">
                        <label asp-for="ConfirmPassword" class="form-label pt">Confirm Password<span class="required"></span></label>
                    </div>
                    <div class="flex-1">
                        <input asp-for="ConfirmPassword" class="form-input-login" />
                        <span asp-validation-for="ConfirmPassword" class="text-red"></span>
                    </div>
                </div>

                Back To <a asp-action="Login" asp-controller="Accounts">Login</a>
                <div class="form flex">
                    <div class="w-50"></div>
                    <div class="flex-1">
                <button type="submit" class=" button button-green-back">Submit</button>
                </div>
                
        </div>
</form>
        </div>
    </div>
</div>


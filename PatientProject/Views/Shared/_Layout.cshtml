<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>


    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    

    




    <!-- #region name -->
    <!-- #endregion -->
    <style>
        /* Dropdown container */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Dropdown content (hidden by default) */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #fff;
            border: 1px solid #ddd;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            min-width: 160px;
            z-index: 1;
            left: 10px;
            margin-left: -109px;
        }

            /* Links inside the dropdown */
            .dropdown-content a {
                color: #333;
                padding: 12px 16px;
                display: block;
                text-decoration: none;
            }

                /* Change color on hover */
                .dropdown-content a:hover {
                    background-color: #f9f9f9;
                }

        /* Show the dropdown menu */
        .show {
            display: block;
        }

        /* Icon */
        .dropdown .icon {
            cursor: pointer;
        }

        /* Menu Icon */
        .menu-icon {
            font-size: 24px;
            color: #555;
        }

        /* Container for content with full screen height */
        .content-container {
            height: calc(100vh - 70px); /* Adjust 70px to match your navbar height */
            overflow-y: auto;
        }

        /* Page content */
        .page-content {
            padding: 20px;
        }

        /* Body styles to hide scrollbar */
        body {
            overflow: hidden;
        }

        .required::after {
            content: "*";
            color: red;
            margin-left: 5px;
        }
    </style>

    <script>
        function toggleDropdown() {
            var dropdown = document.getElementById("myDropdown");
            if (dropdown.classList.contains("show")) {
                dropdown.classList.remove("show");
            } else {
                dropdown.classList.add("show");
            }
            console.log("Dropdown toggled");
        }

        function addStylesheet(cssUrl) {
            // Create a link element
            var cssLink = document.createElement("link");
            cssLink.rel = "stylesheet";
            cssLink.href = cssUrl; // Use the provided CSS URL

            // Append the link element to the placeholder
            document.getElementById("dynamic-css").appendChild(cssLink);
        }
        ;
    </script>
</head>
<body>

    <div class="container">
        <div class="navbar" style="background-color: #bcd5c6;">
            <div class="navbar-brand">
                @if (ViewBag.Title == "Create Patient")
                {
                    <h3>Create New Patient</h3>
                }
                @if (ViewBag.Title == "Delete Patient")
                {
                    <h3>Delete Patient</h3>
                }
                @if (ViewBag.Title == "Patient Details")
                {
                    <h3>Patient Details</h3>
                }
                @if (ViewBag.Title == "Edit Patient")
                {
                    <h3>Edit Patient</h3>
                }
                @if (ViewBag.Title == "ResetPassword")
                {
                    <h3>Reset Password</h3>
                }
                @if (ViewBag.Title == "Patients")
                {
                    <h3>Patient Management System</h3>
                }
            </div>

            <div class="flex-1">
                <div class="navbar account-links" style="background-color: #bcd5c6;">
                    <ul class="flex-container">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="flex-item">
                                <i class="fa-solid fa-user"></i>
                                @User.Identity?.Name
                            </li>
                            <li class="flex-item">
                                <div class="dropdown">
                                    <div class="icon menu-icon" onclick="toggleDropdown()">
                                        <i class="fa fa-bars"></i>
                                    </div>
                                    <div id="myDropdown" class="dropdown-content">
                                        <a href="~/Accounts/ResetPassword" style="margin-left: -3px;">Change password</a>
                                        <a href="~/Accounts/Logout">Logout</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="content-container">
        <div class="page-content">
            @RenderBody()
        </div>
    </div>
   
    @RenderSection("scripts", required: false)




</body>
</html>
